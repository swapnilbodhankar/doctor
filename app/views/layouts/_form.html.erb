<% form_for(@country) do |f| %>
<%= f.error_messages %>
<div>
<p>
<%= f.label :country_name %>
<%= f.text_field :country_name %>
</p>
<div class=”states”>
<%= render(:partial => “state_form”, :locals => { :f => f }) %>
<%= link_to_nested_form “Add more States”, f, :states, 1 %>
</div>
<p>
<%= f.submit ‘Create’ %>
</p>
</div>
<% end %>